        <item name="android:paddingVertical">@dimen/x1_5</item>
        <item name="textSize">@dimen/size14</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="SegmentedButton.ProductsOrBrandsBtn">
        <item name="textColor">@color/grey</item>
        <item name="selectedTextColor">@color/black</item>
