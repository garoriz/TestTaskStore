    <style name="SegmentedButtonGroupRippleFalse">
        <item name="ripple">false</item>
    </style>

    <style name="SegmentedButtonGroupRippleFalse.ProductsOrBrandsSegmentedBtnGroup">
        <item name="radius">@dimen/x1</item>
        <item name="selectedBackground">@color/white</item>
        <item name="selectedBorderColor">@color/light_grey</item>
        <item name="selectedBorderWidth">@dimen/x0_5</item>
        <item name="selectedButtonRadius">@dimen/x1</item>
